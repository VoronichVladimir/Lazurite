<Window x:Class="LazuriteUI.Windows.Preparator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LazuriteUI.Windows.Preparator"
        xmlns:controls="clr-namespace:LazuriteUI.Windows.Controls;assembly=LazuriteUI.Windows.Controls"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Left="50"
        Top="50"
        ResizeMode="NoResize"
        Background="{x:Static controls:Visual.Background}"
        Height="300" Width="600" Topmost="True">
    <Grid>
        <controls:CaptionView VerticalAlignment="Top" HorizontalAlignment="Stretch" Icon="Forklift" x:Name="captionView">Подготовка приложения</controls:CaptionView>
        <Label x:Name="label" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White">Подготовка приложения...</Label>
        <controls:ItemView Click="BtOk_Click" VerticalAlignment="Bottom" Margin="5" Icon="Check" Width="200" Visibility="Collapsed" x:Name="btOk">ОК</controls:ItemView>
    </Grid>
</Window>
