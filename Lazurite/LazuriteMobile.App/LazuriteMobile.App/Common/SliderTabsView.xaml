<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazuriteMobile.App.Common.SliderTabsView"
             xmlns:controls="clr-namespace:LazuriteMobile.App.Controls"
             BackgroundColor="{Binding Source={x:Static controls:Visual.Current}, Path=BottomPanelColor}"
             Opacity="{Binding Source={x:Static controls:Visual.Current}, Path=BottomPanelOpacity}"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="End"
             HeightRequest="45">
    <StackLayout
                 x:Name="stackPanel"
                 Spacing="0"
                 Orientation="Horizontal" 
                 HorizontalOptions="Center"
                 VerticalOptions="End">
    </StackLayout>
</Grid>