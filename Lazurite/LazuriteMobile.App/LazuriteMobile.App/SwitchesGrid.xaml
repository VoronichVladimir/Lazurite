<?xml version="1.0" encoding="UTF-8"?>
<Grid 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="LazuriteMobile.App.SwitchesGrid"
    xmlns:controls="clr-namespace:LazuriteMobile.App.Controls"
    xmlns:common="clr-namespace:LazuriteMobile.App.Common"
    BackgroundColor="{Binding Source={x:Static controls:Visual.Current}, Path=BackgroundSwitchesGrid}">
    <ScrollView x:Name="scrollView">
        <common:ViewBox  HorizontalOptions="FillAndExpand" VerticalOptions="Start">
            <Grid x:Name="grid"></Grid>
        </common:ViewBox>
    </ScrollView>
    <Label x:Name="lblEmpty" TextColor="{Binding Source={x:Static controls:Visual.Current}, Path=ValueForeground}" VerticalOptions="Center" HorizontalOptions="Center">Сценарии пока не созданы...</Label>
</Grid>