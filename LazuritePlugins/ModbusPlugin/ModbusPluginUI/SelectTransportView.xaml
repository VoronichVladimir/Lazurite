<UserControl x:Class="ModbusPluginUI.SelectTransportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModbusPluginUI"
             xmlns:controls="clr-namespace:LazuriteUI.Windows.Controls;assembly=LazuriteUI.Windows.Controls"
             mc:Ignorable="d"
             Background="{x:Static controls:Visual.Background}"
             Width="Auto" Height="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblDescription" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{x:Static controls:Visual.CaptionForeground}" Margin="0,0,5,0"></Label>
        <controls:ItemView x:Name="btEdit" Margin="5" Width="250" Icon="Settings" Grid.Column="1">Изменить тип транспорта</controls:ItemView>
    </Grid>
</UserControl>